<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="description" content="">
    <meta name="author" content="Mohammed Tajuddin, Department of Biodiversity, Conservation and Attractions">
    <title>@ViewBag.Title - Park Alerts System</title>
    @Styles.Render("~/Content/pubcss")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/publicjs")
