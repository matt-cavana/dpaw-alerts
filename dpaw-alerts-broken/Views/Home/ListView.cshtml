@model IEnumerable<dpaw_alerts.Models.Alert>

@if(Model.Count()==0)
{
<div class="alert alert-warning">No active alerts found for the selected alert type!</div>
}
else
{

<table class="table table-striped table-hover table-responsive" id="DPaWDataTable">
    <thead>
        <tr>
            <th>##</th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                Alert Type
            </th>
            <th>Parks/Locations</th>
            <th class="hidden-xs">Files</th>
            <th class="hidden-xs">
                @Html.DisplayNameFor(model => model.StartDate)
            </th>

            <th class="hidden-xs"></th>
        </tr>
    </thead>
    <tbody>
        @{int rowNo = 0;}
        @foreach (var item in Model)
        {
            <tr>
                <td>@(rowNo += 1)</td>
                <td>
                    <a href="#alertDetails" data-value="@item.AlertId" class="blue alertInfo" data-toggle="modal">   @Html.DisplayFor(modelItem => item.Title) </a>
</td>
                <td>
                    <img src='@Url.Content(item.alertType.IconUrl)' width="32" alt="@item.alertType.Name" title="" data-toggle="tooltip" data-placement="left" data-original-title="@item.alertType.Name" /> <span class="hidden-sm hidden-xs hidden-md">   @Html.DisplayFor(modelItem => item.alertType.Name)</span>
                </td>
                <td>
                    <ul class="list-unstyled">

                        @foreach (var location in item.Location)
                        {
                            <li>
                                <a href="#siteInfo" data-value="@location.LocId" class="blue site" role="button" data-toggle="modal">
                                    <i class="fa fa-map-marker blue"></i>     @Html.DisplayFor(locItem => location.Name)
                                </a>
                            </li>
                        }
                    </ul>
                </td>
                <td class="hidden-xs">
                    <ul class="list-unstyled">
                        @foreach (var file in item.Files)
                        {
                            <li>
                                @if (file.FileType == "pdf")
                                {

                                    <a href='@Url.Content(file.FilePath)' title="Download file" target="_blank">
                                        <i class="fa fa-file-pdf-o red"></i>  @Html.DisplayFor(modelItem => file.FileTitle)  (@Html.DisplayFor(modelItem => file.FileSize))
                                    </a>
                                }
                                else if (file.FileType == "docx" || file.FileType == "doc")
                                {
                                    <a href='@Url.Content(file.FilePath)' title="Download file" target="_blank">
                                        <i class='fa fa-file-word-o blue'></i>   @Html.DisplayFor(modelItem => file.FileTitle)  (@Html.DisplayFor(modelItem => file.FileSize))
                                    </a>
                                }
                            </li>
                        }
                    </ul>
                </td>
                <td class="hidden-xs">
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>

                <td class="hidden-xs"><a href="#alertDetails" data-value="@item.AlertId" class="btn btn-info btn-sm alertInfo" data-toggle="modal"><i class="fa fa-info-circle"></i> Details</a></td>
            </tr>
        }
    </tbody>
</table>


            }

